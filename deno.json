{
  "tasks": {
    "update_cache": "rm -f ./deno.lock && deno cache ./src/deps.ts ./src/deps.test.ts",
    "test": "deno test --unstable --check -A --parallel ./test",
    "lint": "deno lint",
    "check": "deno check **/*.ts"
  },
  "fmt": {
    "include": [
      "src/",
      "examples/",
      "test/"
    ],
    "lineWidth": 120
  },
  "lint": {
    "include": [
      "src/",
      "examples/",
      "test/"
    ]
  },
  "compilerOptions": {
    "noErrorTruncation": true
  }
}